rm -rf _todos
mkdir _todos
grep -nri --include "*.js" "// Todo" . | sed "s/\/\/ Todo[:]?//gi" | sed "s|.*/||g" > _todos/todos.txt
grep -i "\[Daniel\]" _todos/todos.txt > _todos/daniel.txt
grep -i "\[Soeren\]" _todos/todos.txt > _todos/soeren.txt
grep -i "\[Max\]" _todos/todos.txt > _todos/max.txt
grep -i "\[sven\]" _todos/todos.txt > _todos/sven.txt
